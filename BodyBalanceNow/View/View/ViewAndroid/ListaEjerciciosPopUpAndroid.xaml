<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="BodyBalanceNow.View.ViewAndroid.ListaEjerciciosPopUpAndroid"
               Size="400,600"
               CanBeDismissedByTappingOutsideOfPopup="False"
               Color="#FFFFFF">

    <StackLayout VerticalOptions="FillAndExpand"
                 HorizontalOptions="FillAndExpand"
                 Spacing="0">
        <ScrollView x:Name="ContenedorInfo"
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand">
            <VerticalStackLayout Spacing="12"
                                Padding="15">
                <Label x:Name="NombreEjercicioLabel"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="#1F2A44"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center" />
                <BoxView HeightRequest="1"
                         BackgroundColor="#E4E7EB"
                         Margin="0,5"
                         HorizontalOptions="FillAndExpand"/>

                <VerticalStackLayout Spacing="6">
                    <Label x:Name="DificultadLabel">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="Dificultad: " FontAttributes="Bold"/>
                                <Span x:Name="DificultadValueSpan"/>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Label x:Name="GrupoLabel">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="Grupo Muscular: " FontAttributes="Bold"/>
                                <Span x:Name="GrupoValueSpan"/>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Label x:Name="EquipamientoLabel">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="Equipamiento: " FontAttributes="Bold"/>
                                <Span x:Name="EquipamientoValueSpan"/>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Label x:Name="AgarreLabel">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="Agarre: " FontAttributes="Bold"/>
                                <Span x:Name="AgarreValueSpan"/>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Label x:Name="ZonaCorporalLabel">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="Zona Corporal: " FontAttributes="Bold"/>
                                <Span x:Name="ZonaCorporalValueSpan"/>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Label x:Name="LateralidadLabel">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="Lateralidad: " FontAttributes="Bold"/>
                                <Span x:Name="LateralidadValueSpan"/>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                </VerticalStackLayout>

                <BoxView HeightRequest="1"
                         BackgroundColor="#E4E7EB"
                         Margin="0,5"
                         HorizontalOptions="FillAndExpand"/>
                <VerticalStackLayout Spacing="8">
                    <Button x:Name="VideoCortoBtn"
                            Text=" Ver demostraci贸n corta"
                            BackgroundColor="#3B82F6"
                            TextColor="White"
                            CornerRadius="12"
                            FontSize="14"
                            HeightRequest="45"
                            HorizontalOptions="FillAndExpand"
                            IsVisible="False"/>
                    <Label x:Name="NoVideoCortoLabel"
                           Text="No hay demostraci贸n corta disponible"
                           FontSize="13"
                           TextColor="#EF4444"
                           HorizontalTextAlignment="Center"
                           IsVisible="True" />

                    <Button x:Name="VideoLargoBtn"
                            Text=" Ver demostraci贸n larga"
                            BackgroundColor="#3B82F6"
                            TextColor="White"
                            CornerRadius="12"
                            FontSize="14"
                            HeightRequest="45"
                            HorizontalOptions="FillAndExpand"
                            IsVisible="False"/>
                    <Label x:Name="NoVideoLargoLabel"
                           Text="No hay demostraci贸n larga disponible"
                           FontSize="13"
                           TextColor="#EF4444"
                           HorizontalTextAlignment="Center"
                           IsVisible="True" />
                </VerticalStackLayout>

                <Button Text="Cerrar"
                        BackgroundColor="#EDEFF2"
                        TextColor="#1F2A44"
                        CornerRadius="8"
                        FontSize="14"
                        FontAttributes="Bold"
                        HeightRequest="42"
                        Margin="0,15,0,0"
                        HorizontalOptions="FillAndExpand"
                        Clicked="AlCerrarClicked"/>
            </VerticalStackLayout>
        </ScrollView>

        <Frame x:Name="ContenedorVideoFrame"
               IsVisible="False"
               BackgroundColor="White"
               Padding="0"
               CornerRadius="10"
               VerticalOptions="FillAndExpand"
               HorizontalOptions="FillAndExpand"
               HasShadow="True">
            <Grid VerticalOptions="FillAndExpand"
                  HorizontalOptions="FillAndExpand">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <WebView x:Name="WebViewPantallaCompleta"
                         Grid.Row="0"
                         VerticalOptions="FillAndExpand"
                         HorizontalOptions="FillAndExpand"
                         MinimumHeightRequest="200"
                          />
                <Button Grid.Row="1"
                        Text="Cerrar Video"
                        BackgroundColor="#EDEFF2"
                        TextColor="#1F2A44"
                        CornerRadius="8"
                        FontSize="14"
                        FontAttributes="Bold"
                        HeightRequest="42"
                        Margin="0,10"
                        HorizontalOptions="CenterAndExpand"
                        Clicked="AlCerrarVideoClicked"/>
            </Grid>
        </Frame>
    </StackLayout>
</toolkit:Popup>
