<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BodyBalanceNow.View.ViewAndroid.ListaEjerciciosAndroid"
             Title="Lista de Ejercicios"
             BackgroundColor="#F0F4F8">
    <VerticalStackLayout HorizontalOptions="CenterAndExpand"
                         VerticalOptions="Center"
                         Spacing="20"
                         Padding="20">
        <!-- Título -->
        <Label Text="Ejercicios Rutina"
               FontSize="24"
               FontAttributes="Bold"
               TextColor="#1565C0"
               HorizontalOptions="Center"
               VerticalOptions="Center" />
        <!-- Frame -->
        <Frame BackgroundColor="White"
               CornerRadius="20"
               Padding="20"
               HasShadow="True"
               BorderColor="#E0E0E0"
               HeightRequest="400"
               Margin="0">
            <StackLayout Padding="10" Spacing="10">
                <!-- Encabezado -->
                <Grid Padding="10"
                      ColumnDefinitions="1*,1*,1*"
                      BackgroundColor="#BBDEFB">
                    <Label Text="Ejercicio"
                           Grid.Column="0"
                           FontAttributes="Bold"
                           FontSize="16"
                           TextColor="#1565C0"
                           HorizontalOptions="Start"
                           VerticalOptions="Center"
                           LineBreakMode="WordWrap"
                           MaxLines="2"
                           Margin="10,0,0,0" />
                    <Label Text="Músculo"
                           Grid.Column="1"
                           FontAttributes="Bold"
                           FontSize="16"
                           TextColor="#1565C0"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           LineBreakMode="WordWrap"
                           MaxLines="2" />
                    <Label Text="Acciones"
                           Grid.Column="2"
                           FontAttributes="Bold"
                           FontSize="16"
                           TextColor="#1565C0"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           LineBreakMode="WordWrap"
                           MaxLines="2"
                           Margin="0,0,10,0" />
                </Grid>
                <!-- Lista de Ejercicios -->
                <CollectionView x:Name="listaEjerciciosRutina"
                                SelectionMode="None"
                                BackgroundColor="Transparent">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="10"
                                  ColumnDefinitions="1*,1*,1*"
                                  Margin="0"
                                  BackgroundColor="#FFFFFF">
                                <Label Text="{Binding NombreEjercicio}"
                                       Grid.Column="0"
                                       FontSize="14"
                                       TextColor="#424242"
                                       HorizontalOptions="Start"
                                       VerticalOptions="Center"
                                       LineBreakMode="WordWrap"
                                       MaxLines="2"
                                       Margin="10,0,0,0" />
                                <Label Text="{Binding GrupoMuscular}"
                                       Grid.Column="1"
                                       FontSize="14"
                                       TextColor="#424242"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"
                                       LineBreakMode="WordWrap"
                                       MaxLines="2" />
                                <HorizontalStackLayout Grid.Column="2"
                                                       Spacing="8"
                                                       HorizontalOptions="Center"
                                                       VerticalOptions="Center"
                                                       Margin="0,0,10,0">
                                    <ImageButton Source="delete.png"
                                                 WidthRequest="30"
                                                 HeightRequest="30"
                                                 BackgroundColor="Transparent"
                                                 CornerRadius="8"
                                                 Padding="5"
                                                 ToolTipProperties.Text="Opciones"
                                                 Clicked="OnPlayButtonClicked" />
                                </HorizontalStackLayout>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentPage>