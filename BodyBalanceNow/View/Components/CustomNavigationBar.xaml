<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TFGMultiplatform.Views.Components.CustomNavigationBar">
    <Border HeightRequest="70"
            BackgroundColor="#191919"  
        Padding="15"
           
>
        <!-- Sombra sutil -->

        <Grid ColumnDefinitions="Auto, *, Auto" 
              VerticalOptions="Center"
              ColumnSpacing="10">

            <!-- Logo -->
            <Image Source="logo.png"
                   HeightRequest="40"
                   WidthRequest="40"
                   VerticalOptions="Center"
                   Aspect="AspectFit"/>

            <!-- Título -->
            <Label Text="Mi Aplicación"
                   TextColor="White"
                   FontSize="22"
                   FontAttributes="Bold"
                   VerticalTextAlignment="Center"
                   HorizontalTextAlignment="Start"
                   Grid.Column="1"
                   Margin="10,0,0,0">

            </Label>

            <!-- Botón de menú -->
            <ImageButton x:Name="imageMenu"
                         Source="menu_cerrado.png"
                         Grid.Column="2"
                         HeightRequest="60"
                         WidthRequest="60"
                         BackgroundColor="Transparent"
                         VerticalOptions="Center"
                         HorizontalOptions="End"
                         Clicked="onAbrirMenu">
               
            </ImageButton>
        </Grid>
    </Border>
</ContentView>