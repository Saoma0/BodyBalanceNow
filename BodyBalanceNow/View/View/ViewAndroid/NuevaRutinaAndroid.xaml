<?xml version="1.0" encoding="utf-8" ?>
<uranium:UraniumContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:uranium="http://schemas.enisn-projects.io/dotnet/maui/uraniumui"
    xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
    x:Class="BodyBalanceNow.View.ViewAndroid.NuevaRutinaAndroid"
    BackgroundColor="#F0F4F8"
    >

    <!-- CONTENEDOR ÚNICO PARA TODO -->
    <Grid>
        <!-- CONTENIDO PRINCIPAL -->
        <Grid RowDefinitions="Auto,*,Auto"
              ColumnDefinitions="*"
              Padding="20,10"
              Margin="0">
            <!-- TÍTULO -->
            <Label Grid.Row="0"
                   Grid.Column="0"
                   Text="Rutina de Entrenamiento"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="#1F2A44"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   Margin="0,30,0,30" />

            <!-- LISTA DE EJERCICIOS -->
            <Frame Grid.Row="1"
                   Grid.Column="0"
                   BackgroundColor="#FFFFFF"
                   CornerRadius="12"
                   Padding="15"
                   Margin="0,0,0,10"
                   HasShadow="True"
                   BorderColor="#E0E0E0">
                <ScrollView>
                    <CollectionView x:Name="listaEjercicios"
                                    SelectionMode="None"
                                    >
                        <CollectionView.ItemsLayout>
                            <GridItemsLayout Orientation="Vertical"
                                             Span="1"
                                             HorizontalItemSpacing="10"
                                             VerticalItemSpacing="10" />
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame BackgroundColor="#F9FAFB"
                                       CornerRadius="8"
                                       Padding="15"
                                       Margin="5"
                                       HasShadow="False"
                                       BorderColor="#E0E0E0">
                                    <StackLayout Orientation="Vertical" Spacing="6">
                                        <Label Text="{Binding NombreEjercicio}"
                                               FontSize="16"
                                               FontAttributes="Bold"
                                               TextColor="#1F2A44"
                                               
                                               MaxLines="2" />
                                        <Label Text="{Binding NivelDificultad, StringFormat='Dificultad: {0}'}"
                                               FontSize="14"
                                               TextColor="#64748B"
                                                />
                                        <Label Text="{Binding GrupoMuscular, StringFormat='Grupo: {0}'}"
                                               FontSize="14"
                                               TextColor="#64748B"
                                                />
                                        <StackLayout Orientation="Horizontal"
                                                     Spacing="10"
                                                     HorizontalOptions="End"
                                                     VerticalOptions="EndAndExpand">
                                            <ImageButton 
                                                    Source="info.png"
                                                    CornerRadius="12"
                                                    WidthRequest="40"
                                                    HeightRequest="40"
                                                    Clicked="OnInfo"
                                                    Padding="0" />
                                            <ImageButton 
                                                    Source="anadir.png"
                                                    CornerRadius="12"
                                                    WidthRequest="40"
                                                    HeightRequest="40"
                                                    Clicked="OnAddExerciseInRoutine"
                                                    Padding="0" />
                                        </StackLayout>
                                    </StackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </ScrollView>
            </Frame>

            <!-- BOTONES INFERIORES -->
            <HorizontalStackLayout Grid.Row="2"
                                   Grid.Column="0"
                                   HorizontalOptions="Center"
                                   Spacing="20"
                                   Margin="0,10,0,40">
                <Button Text="Anterior"
                        Clicked="OnAnteriorClicked"
                        BackgroundColor="#EDEFF2"
                        TextColor="#1F2A44"
                        CornerRadius="10"
                        Padding="15,8"
                        FontSize="16"
                        WidthRequest="120"
                        HeightRequest="50" />
                <Label x:Name="pActual"
                       FontSize="16"
                       TextColor="#1F2A44"
                       VerticalOptions="Center"
                       Margin="10,0" />
                <Button Text="Siguiente"
                        Clicked="OnSiguienteClicked"
                        BackgroundColor="#EDEFF2"
                        TextColor="#1F2A44"
                        CornerRadius="10"
                        Padding="15,8"
                        FontSize="16"
                        WidthRequest="120"
                        HeightRequest="50" />
            </HorizontalStackLayout>
        </Grid>
    </Grid>

    <!-- BOTTOM SHEET CON EL RESUMEN -->
    <uranium:UraniumContentPage.Attachments>
        <material:BottomSheetView x:Name="bottomSheetResumen"
                                  CloseOnTapOutside="True"
                                  DisablePageWhenOpened="False">
            <material:BottomSheetView.Header>
                <Label x:Name="resumenTitleLabel"
                       Text="Tu Rutina"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="#2E86DE"
                       HorizontalOptions="Center"
                       Padding="10" />
            </material:BottomSheetView.Header>

            <ScrollView>
                <VerticalStackLayout Padding="20" Spacing="15">
                    <CollectionView x:Name="resumenEntrenamiento"
                                    IsVisible="True"
                                    ItemsSource="{Binding ResumenEntrenamiento}"
                                    EmptyView="Aún no hay ejercicios en la rutina."
                                    >
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame BackgroundColor="#F9FAFB"
                                       CornerRadius="8"
                                       Padding="15"
                                       Margin="5"
                                       HasShadow="False"
                                       BorderColor="#E0E0E0">
                                    <Grid ColumnDefinitions="*,Auto">
                                        <VerticalStackLayout Grid.Column="0"
                                                             Spacing="6"
                                                             VerticalOptions="Center">
                                            <Label Text="{Binding NombreEjercicio}"
                                                   FontSize="16"
                                                   FontAttributes="Bold"
                                                   TextColor="#1F2A44"
                                                   
                                                   MaxLines="2" />
                                            <HorizontalStackLayout Spacing="8">
                                                <Label Text="{Binding GrupoMuscular, StringFormat='Grupo: {0}'}"
                                                       FontSize="14"
                                                       TextColor="#64748B"
                                                        />
                                                <Label Text="{Binding NivelDificultad, StringFormat='Dificultad: {0}'}"
                                                       FontSize="14"
                                                       TextColor="#64748B"
                                                       />
                                            </HorizontalStackLayout>
                                        </VerticalStackLayout>
                                        <ImageButton Source="delete.png"
                                                     Grid.Column="1"
                                                     BackgroundColor="Transparent"
                                                     HeightRequest="24"
                                                     WidthRequest="24"
                                                     Padding="0"
                                                     VerticalOptions="Center"
                                                     
                                                     Clicked="OnRemoveExerciseFromRoutine" />
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                    <Button Text="Confirmar Rutina"
                            BackgroundColor="#1F2A44"
                            TextColor="White"
                            CornerRadius="8"
                            HeightRequest="45"
                            FontSize="15"
                            FontAttributes="Bold"
                            HorizontalOptions="FillAndExpand"
                            Clicked="OnAddRoutine"
                            Margin="0,10,0,0" />
                </VerticalStackLayout>
            </ScrollView>
        </material:BottomSheetView>
    </uranium:UraniumContentPage.Attachments>
</uranium:UraniumContentPage>