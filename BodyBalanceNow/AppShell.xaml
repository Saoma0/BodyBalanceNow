<Shell
  x:Class="BodyBalanceNow.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BodyBalanceNow"
    xmlns:views="clr-namespace:BodyBalanceNow.View"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False"
    Title="BodyBalanceNow"
    Shell.TabBarBackgroundColor="#3e4a59"
    Shell.TabBarUnselectedColor="white"
    Shell.TabBarTitleColor="#81D4FA"
    Shell.TabBarForegroundColor="#FBC02D">

    <TabBar>
        <ShellContent
            x:Name="InicioTab"
            Title="Inicio"
            Icon="house.png"
            Route="MainPage" />

        <ShellContent
            Title="IMC"
            Icon="scale.png"
            ContentTemplate="{DataTemplate views:CalculadoraIMC}"
            Route="CalculadoraIMC" />

        <ShellContent
            Title="Tiempo"
            Icon="timer.png"
            ContentTemplate="{DataTemplate views:CronometroTemporizador}"
            Route="CronometroTemporizador" />

        <ShellContent
            Title="Login"
            Icon="login.png"
            ContentTemplate="{DataTemplate views:LoginPage}"
            Route="LoginPage" />

        <ShellContent
            Title="Registro"
            Icon="userplus.png"
            ContentTemplate="{DataTemplate views:RegisterPage}"
            Route="RegisterPage" />
    </TabBar>
</Shell>
