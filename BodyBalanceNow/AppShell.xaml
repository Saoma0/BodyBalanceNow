<Shell
  x:Class="BodyBalanceNow.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BodyBalanceNow"
    xmlns:views="clr-namespace:BodyBalanceNow.View"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False"
    Title="BodyBalanceNow"
    Shell.TabBarBackgroundColor="#3e4a59"
    Shell.TabBarUnselectedColor="white"
    Shell.TabBarTitleColor="#81D4FA"
    Shell.TabBarForegroundColor="#FBC02D">

    <TabBar>
        <ShellContent
            x:Name="InicioTab"
            Title="Inicio"
            Icon="house.png"
            Route="MainPage" />

        <ShellContent
            Title="Entrenamiento"
            Icon="entrenamiento2.png"
            x:Name="EntrenamientoTab"
            Route="BoxEntrenamiento" />

        <ShellContent
            Title="Peso"
            Icon="scale.png"
            x:Name="PesoTab"
            Route="RegistroPesoWindows" />


        <ShellContent
            Title="Salud"
            Icon="heart.png"
            x:Name="SaludTab"
            Route="BoxSalud" />

        <ShellContent
            Title="Tiempo"
            Icon="timer.png"
            x:Name="TiempoTab"
            Route="CronometroTemporizador" />

        <ShellContent
            Title="Estadisticas"
            Icon="statistics.png"
            x:Name="estadisticasTab"
            Route="StatisticsPage" />
    </TabBar>
</Shell>