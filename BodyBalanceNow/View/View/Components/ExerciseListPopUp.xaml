<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               xmlns:ur="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
               x:Class="TFGMultiplatform.Views.Components.ExerciseListPopUp"
               CanBeDismissedByTappingOutsideOfPopup="False"
               Color="Transparent">

    <Grid RowDefinitions="Auto,*"
          Padding="20"
          BackgroundColor="#EDEFF2">

        <!-- Imagen simulando el clip metÃ¡lico -->
        <Image Source="clip_icon.png"
               HeightRequest="40"
               HorizontalOptions="Center" />

        <!-- Clipboard principal -->
        <Frame Grid.Row="1"
               BackgroundColor="White"
               CornerRadius="12"
               Padding="15"
               Margin="0,20,0,0"
               HasShadow="True"
               BorderColor="#E0E0E0">
            <VerticalStackLayout Spacing="20">
                <Label Text="Tu lista de ejercicios"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="#1F2A44"
                       HorizontalOptions="Center" />
                <CollectionView x:Name="exerciseList"
                                ItemsSource="{Binding Exercises}"
                                VerticalOptions="FillAndExpand">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout Orientation="Horizontal" Spacing="10">
                                <Label Text="{Binding NombreEjercicio}"
                                       FontSize="16"
                                       TextColor="#1F2A44" />
                                <Button Text="Eliminar"
                                        BackgroundColor="#EF4444"
                                        TextColor="White"
                                        FontSize="14"
                                        CornerRadius="8"
                                        Clicked="OnRemoveExercise" />
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <Button Text="Cerrar"
                        BackgroundColor="#3B82F6"
                        TextColor="White"
                        CornerRadius="8"
                        HorizontalOptions="Center"
                        WidthRequest="150"
                        Clicked="OnClosePopup" />
            </VerticalStackLayout>
        </Frame>
    </Grid>

</toolkit:Popup>
