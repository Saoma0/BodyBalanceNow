<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
             x:Class="BodyBalanceNow.View.ViewWindows.RegistroEstresWindows"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             xmlns:converters="clr-namespace:BodyBalanceNow.Converters"
             BackgroundColor="#F0F4F8"
             Title="Seguimiento de EstrÃ©s">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:NivelEstresToEmojiConverter x:Key="NivelEstresToEmojiConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <ScrollView VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Columna izquierda -->
                    <VerticalStackLayout Grid.Column="0"
                                         Spacing="15"
                                         Padding="10"
                                         HorizontalOptions="Center"
                                         VerticalOptions="Center"
                                         WidthRequest="320">

                        <Label x:Name="mensajeNoSesion"
                               IsVisible="False"
                               Text="Inicia sesiÃ³n para registrar tu nivel de estrÃ©s."
                               TextColor="#E74C3C"
                               FontSize="14"
                               HorizontalTextAlignment="Center"
                               FontAttributes="Bold" />

                        <!-- Panel resumen -->
                        <Frame BackgroundColor="White"
                               CornerRadius="25"
                               Padding="20"
                               HasShadow="True"
                               BorderColor="#E0E0E0">
                            <VerticalStackLayout Spacing="10">
                                <Label x:Name="resumenEstresLabel"
                                       Text="Hoy: Nivel 0"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="#2C3E50"
                                       HorizontalTextAlignment="Center" />

                                <Label x:Name="recomendacionEstresLabel"
                                       Text="*El estrÃ©s debe mantenerse bajo para una buena salud"
                                       FontSize="13"
                                       TextColor="#7F8C8D"
                                       HorizontalTextAlignment="Center"
                                       FontAttributes="Italic" />

                                <Label Text="(El nivel se basa en la media de todos los registros del dÃ­a)"
                                       FontSize="12"
                                       TextColor="#A0A0A0"
                                       HorizontalTextAlignment="Center"
                                       FontAttributes="Italic" />
                            </VerticalStackLayout>
                        </Frame>


                        <!-- Nivel de estrÃ©s -->
                        <Frame BackgroundColor="White"
                               CornerRadius="20"
                               Padding="15"
                               HasShadow="True"
                               BorderColor="#E0E0E0"
                               WidthRequest="300">
                            <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                                <Label Text="ðŸ˜Ÿ Selecciona tu nivel de estrÃ©s (0 a 10)"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="#2C3E50" />

                                <!-- Emoji dinÃ¡mico -->
                                <Label x:Name="emojiEstresLabel"
                                       Text="ðŸ˜Œ"
                                       FontSize="36"
                                       HorizontalTextAlignment="Center" />

                                <Slider x:Name="sliderNivelEstres"
                                        Minimum="0"
                                        Maximum="10"
                                        Value="0"
                                        ValueChanged="SliderNivelEstres_ValueChanged" />

                                <Label x:Name="valorSliderLabel"
                                       Text="Nivel actual: 0"
                                       FontSize="14"
                                       HorizontalTextAlignment="Center"
                                       TextColor="#2C3E50" />
                            </VerticalStackLayout>
                        </Frame>


                        <!-- Fecha -->
                        <Frame BackgroundColor="White"
                               CornerRadius="20"
                               Padding="15"
                               HasShadow="True"
                               BorderColor="#E0E0E0"
                               WidthRequest="300">
                            <VerticalStackLayout>
                                <Label Text="ðŸ“… Fecha del registro"
                                       FontSize="14"
                                       TextColor="#2C3E50"
                                       FontAttributes="Bold"
                                       HorizontalTextAlignment="Center" />
                                <DatePicker x:Name="fechaEstresPicker"
                                            Format="dd/MM/yyyy"
                                            Date="{x:Static System:DateTime.Today}"
                                            MaximumDate="{x:Static System:DateTime.Today}"
                                            TextColor="#2C3E50"
                                            FontSize="14"
                                            WidthRequest="200" />
                            </VerticalStackLayout>
                        </Frame>

                        <!-- BotÃ³n de guardar -->
                        <Button Text="Registrar EstrÃ©s"
                                StyleClass="ElevatedButton"
                                BackgroundColor="#34C759"
                                TextColor="White"
                                FontAttributes="Bold"
                                CornerRadius="15"
                                Clicked="RegistrarEstres_Clicked"
                                WidthRequest="240" />

                        <!-- GrÃ¡fico semanal -->
                        <Frame CornerRadius="20"
                               Padding="10"
                               BackgroundColor="White"
                               HasShadow="True"
                               BorderColor="#E0E0E0"
                               Margin="0,10,0,0"
                               WidthRequest="300"
                               HeightRequest="250">
                            <HorizontalStackLayout Spacing="10">
                                <!-- Leyenda -->
                                <VerticalStackLayout WidthRequest="60"
                                                     VerticalOptions="Center"
                                                     Spacing="20">
                                    <!-- LÃ­nea para el nivel alto -->
                                    <StackLayout Orientation="Horizontal" Spacing="5" VerticalOptions="Center">
                                        <BoxView HeightRequest="1" WidthRequest="20" BackgroundColor="Red" VerticalOptions="Center"/>
                                        <Label Text="Alto"
                                               FontSize="12"
                                               TextColor="#2C3E50"
                                               VerticalTextAlignment="Start" />
                                    </StackLayout>

                                    <!-- LÃ­nea para el nivel medio -->
                                    <StackLayout Orientation="Horizontal" Spacing="5" VerticalOptions="Center">
                                        <BoxView HeightRequest="1" WidthRequest="20" BackgroundColor="#FFB300" VerticalOptions="Center"/>
                                        <Label Text="Medio"
                                               FontSize="12"
                                               TextColor="#2C3E50"
                                               VerticalTextAlignment="Center" />
                                    </StackLayout>

                                    <!-- LÃ­nea para el nivel bajo -->
                                    <StackLayout Orientation="Horizontal" Spacing="5" VerticalOptions="Center">
                                        <BoxView HeightRequest="1" WidthRequest="20" BackgroundColor="Green" VerticalOptions="Center"/>
                                        <Label Text="Bajo"
                                               FontSize="12"
                                               TextColor="#2C3E50"
                                               VerticalTextAlignment="End" />
                                    </StackLayout>
                                </VerticalStackLayout>

                                <!-- GrÃ¡fico -->
                                <VerticalStackLayout Spacing="10">
                                    <Label Text="GrÃ¡fico semanal"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           TextColor="#2C3E50"
                                           HorizontalTextAlignment="Center" />
                                    <Grid x:Name="graficoSemanalEstres"
                                          ColumnSpacing="5"
                                          VerticalOptions="End"
                                          HorizontalOptions="Center"
                                          HeightRequest="160">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                    </Grid>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                        </Frame>



                    </VerticalStackLayout>

                    <!-- Columna derecha: Historial -->
                    <VerticalStackLayout Grid.Column="1"
                                         Spacing="10"
                                         Padding="10"
                                         HorizontalOptions="Center"
                                         VerticalOptions="Center"
                                         WidthRequest="300">

                        <Label x:Name="historialTitleLabel"
                               Text="Historial de EstrÃ©s"
                               IsVisible="False"
                               TextColor="#2C3E50"
                               FontSize="16"
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center" />

                        <CollectionView x:Name="historialEstresCollection"
                                        ItemsSource="{Binding RegistrosEstres}"
                                        HeightRequest="460"
                                        EmptyView="AÃºn no hay registros.">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Frame Padding="10"
                                           CornerRadius="16"
                                           BackgroundColor="White"
                                           BorderColor="#E0E0E0"
                                           HasShadow="True"
                                           Margin="0,4,0,4">
                                        <Grid ColumnDefinitions="*,Auto">
                                            <VerticalStackLayout Spacing="2" Grid.Column="0">
                                                <Label Text="{Binding Fecha, StringFormat='Fecha: {0:dd/MM/yyyy}'}"
                                                       TextColor="#2C3E50"
                                                       FontSize="14"
                                                       FontAttributes="Bold" />

                                                <!-- Nivel + emoji -->
                                                <HorizontalStackLayout Spacing="8">
                                                    <Label Text="{Binding Nivel, StringFormat='Nivel: {0}'}"
                                                           TextColor="#007AFF"
                                                           FontSize="13" />

                                                    <Label Text="{Binding Nivel, Converter={StaticResource NivelEstresToEmojiConverter}}"
                                                            FontSize="13" />
                                                </HorizontalStackLayout>
                                            </VerticalStackLayout>

                                            <!-- BotÃ³n eliminar -->
                                            <ImageButton Source="delete.png"
                                                         Grid.Column="1"
                                                         BackgroundColor="Transparent"
                                                         HeightRequest="15"
                                                         WidthRequest="15"
                                                         Padding="0"
                                                         CommandParameter="{Binding}"
                                                         Clicked="EliminarRegistroEstres_Clicked" />
                                        </Grid>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Grid>
            </Grid>
        </ScrollView>
    </Grid>
</ContentPage>
