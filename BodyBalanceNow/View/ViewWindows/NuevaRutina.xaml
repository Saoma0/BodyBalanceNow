<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             
            x:Class="BodyBalanceNow.View.ViewWindows.NuevaRutina"
             BackgroundColor="#F0F4F8">

   
    <Grid RowDefinitions="Auto,*,Auto" 
          ColumnDefinitions="2*,*" 
          Padding="20"
          Margin="100,0,100,0">

            <Label Grid.Row="0" 
               Grid.Column="0" 
               Grid.ColumnSpan="2"
               Text="Rutina de Entrenamiento" 
               FontSize="26" 
               FontAttributes="Bold" 
               TextColor="#1F2A44"
               HorizontalOptions="Center"
               Margin="0,10,0,20" />
        <Frame Grid.Row="1" 
               Grid.Column="0" 
               BackgroundColor="#FFFFFF"
               CornerRadius="12"
               Padding="15" 
               Margin="0,0,5,0"
               HasShadow="True"
               BorderColor="#E4E7EB">
            <ScrollView>
                <CollectionView x:Name="listaEjercicios">
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout Orientation="Vertical" 
                                        Span="2" 
                                        HorizontalItemSpacing="10"
                                        VerticalItemSpacing="10" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BackgroundColor="#F9FAFB" 
                                   CornerRadius="8" 
                                   Padding="10"
                                   Margin="5"
                                   HasShadow="False"
                                   BorderColor="#E4E7EB">
                                <StackLayout Orientation="Vertical" Spacing="5">
                                    <Label Text="{Binding NombreEjercicio}" 
                                           FontSize="15" 
                                           FontAttributes="Bold"
                                           TextColor="#1F2A44" />
                                    <Label Text="{Binding NivelDificultad, StringFormat='Dificultad: {0}'}"
                                           FontSize="13" 
                                           TextColor="#64748B" />
                                    <Label Text="{Binding GrupoMuscular, StringFormat='Grupo: {0}'}"
                                           FontSize="13" 
                                           TextColor="#64748B" />
                                    <StackLayout Orientation="Horizontal" 
                                                Spacing="8"
                                                HorizontalOptions="End">
                                        <Button Text="ℹ️" 
                                                BackgroundColor="#EDEFF2"
                                                TextColor="#1F2A44"
                                                CornerRadius="12"
                                                WidthRequest="35"
                                                HeightRequest="35"
                                                FontSize="13" 
                                                Clicked="OnInfo"/>
                                        <Button Text="+"
                                                BackgroundColor="Black"
                                                TextColor="White"
                                                CornerRadius="12"
                                                WidthRequest="35"
                                                HeightRequest="35"
                                                FontSize="13" 
                                                Clicked="OnAddExerciseInRoutine"/>
                                    </StackLayout>
                                </StackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </ScrollView>
        </Frame>
        <Frame Grid.Row="1" 
               Grid.Column="1" 
               BackgroundColor="#FFFFFF"
               CornerRadius="12" 
               Padding="15"
               Margin="5,0,0,0"
               HasShadow="True"
               BorderColor="#E4E7EB">
            <Grid RowDefinitions="Auto,Auto,*,Auto">
                <Label Grid.Row="0"
                       Text="Tu Rutina" 
                       FontSize="18" 
                       FontAttributes="Bold"
                       TextColor="#1F2A44" 
                       HorizontalOptions="Start" 
                       Margin="0,0,0,5" />
                <BoxView Grid.Row="1" 
                         BackgroundColor="#E4E7EB" 
                         HeightRequest="1" 
                         HorizontalOptions="FillAndExpand" 
                         Margin="0,0,0,10" />
                <ScrollView Grid.Row="2">
                    <StackLayout Spacing="8">
                        <CollectionView x:Name="resumenEntrenamiento">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid ColumnDefinitions="*,Auto" 
                                          Padding="5,8">
                                        <StackLayout Grid.Column="0" 
                                                    Orientation="Vertical" 
                                                    Spacing="2">
                                            <Label Text="{Binding NombreEjercicio}" 
                                                   FontSize="14" 
                                                   FontAttributes="Bold" 
                                                   TextColor="#1F2A44" />
                                            <Label Text="{Binding GrupoMuscular, StringFormat='Grupo: {0}'}"
                                                   FontSize="12" 
                                                   TextColor="#64748B" />
                                            <Label Text="{Binding NivelDificultad, StringFormat='Dificultad: {0}'}"
                                                   FontSize="12" 
                                                   TextColor="#64748B" />
                                        </StackLayout>
                                        <Button Grid.Column="1" 
                                                Text="X" 
                                                BackgroundColor="Transparent" 
                                                TextColor="#EF4444" 
                                                FontSize="14" 
                                                WidthRequest="30" 
                                                HeightRequest="30" 
                                                VerticalOptions="Center" 
                                                Clicked="OnRemoveExerciseFromRoutine"/>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </StackLayout>
                </ScrollView>
                <StackLayout Grid.Row="3" 
                            Orientation="Vertical" 
                            Spacing="10" 
                            Margin="0,15,0,0">
                    <BoxView BackgroundColor="#E4E7EB" 
                             HeightRequest="1" 
                             HorizontalOptions="FillAndExpand" />
                    <Button Text="Confirmar Rutina"
                            BackgroundColor="Black"
                            TextColor="#FFFFFF"
                            CornerRadius="8"
                            HeightRequest="45"
                            FontSize="15"
                            FontAttributes="Bold"
                            HorizontalOptions="FillAndExpand" 
                            Clicked="OnAddRoutine"/>
                </StackLayout>
            </Grid>
        </Frame>
        <HorizontalStackLayout Grid.Row="2" 
                              Grid.Column="0" 
                              Grid.ColumnSpan="2" 
                              HorizontalOptions="Center"
                              Spacing="15"
                              Margin="0,15,0,10">
            <Button Text="Anterior" 
                    Clicked="OnAnteriorClicked"
                    BackgroundColor="#EDEFF2"
                    TextColor="#1F2A44"
                    CornerRadius="8"
                    Padding="10,5"
                    FontSize="14" />
            <Label x:Name="pActual"
                   FontSize="16"
                   TextColor="#1F2A44"
                   VerticalOptions="Center" />
            <Button Text="Siguiente" 
                    Clicked="OnSiguienteClicked"
                    BackgroundColor="#EDEFF2"
                    TextColor="#1F2A44"
                    CornerRadius="8"
                    Padding="10,5"
                    FontSize="14" />
        </HorizontalStackLayout>
    </Grid>
</ContentPage>