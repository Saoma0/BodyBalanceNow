<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BodyBalanceNow.View.ViewWindows.BoxSalud"
             BackgroundColor="#F0F4F8">

    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="30" Padding="20">

        <!-- Botón Agua -->
        <HorizontalStackLayout Spacing="15" VerticalOptions="Center">
            <Frame BackgroundColor="#E3EAF2"
                   Padding="10,8"
                   CornerRadius="12"
                   HasShadow="False"
                   WidthRequest="160"
                   VerticalOptions="Center">
                <Label Text="Mantente hidratado a lo largo del día"
                       FontSize="13"
                       TextColor="#34495E"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center" />
            </Frame>

            <Grid WidthRequest="420" HeightRequest="80">
                <Image Source="drop.png"
               WidthRequest="48"
               HeightRequest="48"
               VerticalOptions="Center"
               HorizontalOptions="Start"
               Margin="0,0,0,0"/>
                <Button Text="Registro de Agua"
                StyleClass="ElevatedButton"
                FontSize="24"
                BackgroundColor="Black"
                TextColor="White"
                FontAttributes="Bold"
                CornerRadius="16"
                HeightRequest="70"
                WidthRequest="360"
                Margin="60,0,0,0"
                Clicked="IrARegistroAguaWindows_Clicked" />
            </Grid>
        </HorizontalStackLayout>


        <!-- Botón Sueño -->
        <HorizontalStackLayout Spacing="15" VerticalOptions="Center">
            <Frame BackgroundColor="#E3EAF2"
                   Padding="10,8"
                   CornerRadius="12"
                   HasShadow="False"
                   WidthRequest="160"
                   VerticalOptions="Center">
                <Label Text="Registra tu descanso para mejorar tu energía."
                       FontSize="13"
                       TextColor="#34495E"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center" />
            </Frame>

            <Grid WidthRequest="420" HeightRequest="80">
                <Image Source="sleep.png"
                       WidthRequest="48"
                       HeightRequest="48"
                       VerticalOptions="Center"
                       HorizontalOptions="Start"
                       Margin="0,0,0,0"/>
                <Button Text="Registro de Sueño"
                        StyleClass="ElevatedButton"
                        FontSize="24"
                        BackgroundColor="Black"
                        TextColor="White"
                        FontAttributes="Bold"
                        CornerRadius="16"
                        HeightRequest="70"
                        WidthRequest="360"
                        Margin="60,0,0,0"
                        Clicked="IrARegistroSuenoWindows_Clicked" />
            </Grid>
        </HorizontalStackLayout>

        <!-- Botón Estrés -->
        <HorizontalStackLayout Spacing="15" VerticalOptions="Center">
            <Frame BackgroundColor="#E3EAF2"
                   Padding="10,8"
                   CornerRadius="12"
                   HasShadow="False"
                   WidthRequest="160"
                   VerticalOptions="Center">
                <Label Text="Conocer tu estrés es el primer paso para controlarlo"
                       FontSize="13"
                       TextColor="#34495E"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center" />
            </Frame>

            <Grid WidthRequest="420" HeightRequest="80">
                <Image Source="stress.png"
                       WidthRequest="48"
                       HeightRequest="48"
                       VerticalOptions="Center"
                       HorizontalOptions="Start"
                       Margin="0,0,0,0"/>
                <Button Text="Registro de Estrés"
                        StyleClass="ElevatedButton"
                        FontSize="24"
                        BackgroundColor="Black"
                        TextColor="White"
                        FontAttributes="Bold"
                        CornerRadius="16"
                        HeightRequest="70"
                        WidthRequest="360"
                        Margin="60,0,0,0"
                        Clicked="IrARegistroEstresWindows_Clicked" />
            </Grid>
        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>
