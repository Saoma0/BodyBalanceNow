<?xml version="1.0" encoding="utf-8" ?>
<uranium:UraniumContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
    xmlns:uranium="http://schemas.enisn-projects.io/dotnet/maui/uraniumui"
    xmlns:System="clr-namespace:System;assembly=mscorlib"
    x:Class="BodyBalanceNow.View.ViewAndroid.RegistroAguaAndroid"
    BackgroundColor="#F0F4F8">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- MENSAJE SIN SESIÃ“N -->
            <Label x:Name="mensajeNoSesion"
                   IsVisible="False"
                   Text="Inicia sesiÃ³n para registrar tu consumo de agua."
                   TextColor="#E74C3C"
                   FontSize="14"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <!-- PANEL PROGRESO -->
            <Frame BackgroundColor="White"
                   CornerRadius="25"
                   Padding="20"
                   HasShadow="True"
                   BorderColor="#E0E0E0">
                <VerticalStackLayout Spacing="10">
                    <Label x:Name="progresoLabel"
                           Text="Hoy: 0 / 2000 ml"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#2C3E50"
                           HorizontalTextAlignment="Center" />

                    <ProgressBar x:Name="progresoAguaBar"
                                 Progress="0"
                                 HeightRequest="10"
                                 BackgroundColor="#D6D6D6"
                                 ProgressColor="#00BFFF"
                                 Margin="0,4" />

                    <Label x:Name="objetivoCumplidoLabel"
                           Text="ðŸŽ‰ Â¡Objetivo diario cumplido!"
                           FontSize="14"
                           TextColor="MediumSeaGreen"
                           FontAttributes="Bold"
                           IsVisible="False"
                           HorizontalTextAlignment="Center"
                           Margin="0,5,0,0" />
                </VerticalStackLayout>
            </Frame>

            <!-- BOTONES DE REGISTRO -->
            <HorizontalStackLayout x:Name="botonesRegistro"
                                   IsVisible="False"
                                   Spacing="15"
                                   HorizontalOptions="Center">
                <Button Text="+250 ml"
                        BackgroundColor="#2196F3"
                        TextColor="White"
                        CornerRadius="20"
                        CommandParameter="250"
                        Clicked="RegistrarConsumo"
                        FontAttributes="Bold"
                        WidthRequest="120" />
                <Button Text="+500 ml"
                        BackgroundColor="#1976D2"
                        TextColor="White"
                        CornerRadius="20"
                        CommandParameter="500"
                        Clicked="RegistrarConsumo"
                        FontAttributes="Bold"
                        WidthRequest="120" />
            </HorizontalStackLayout>

            <!-- INFO VASOS -->
            <Frame BackgroundColor="White"
                   CornerRadius="20"
                   Padding="15"
                   HasShadow="True"
                   BorderColor="#E0E0E0"
                   WidthRequest="300">
                <HorizontalStackLayout Spacing="20"
                                       HorizontalOptions="Center">
                    <Label Text="ðŸ’§ 250 ml â‰ˆ 1 vaso"
                           FontSize="13"
                           TextColor="#2C3E50" />
                    <Label Text="ðŸ’§ 500 ml â‰ˆ 2 vasos"
                           FontSize="13"
                           TextColor="#2C3E50" />
                </HorizontalStackLayout>
            </Frame>

            <!-- FECHA DEL CONSUMO -->
            <Frame BackgroundColor="White"
                   CornerRadius="20"
                   Padding="15"
                   HasShadow="True"
                   BorderColor="#E0E0E0"
                   WidthRequest="300">
                <VerticalStackLayout Spacing="6" HorizontalOptions="Center">
                    <Label Text="ðŸ“… Fecha del consumo"
                           FontSize="14"
                           TextColor="#2C3E50"
                           FontAttributes="Bold"
                           HorizontalTextAlignment="Center" />
                    <DatePicker x:Name="fechaPicker"
                                Format="dd/MM/yyyy"
                                Date="{x:Static System:DateTime.Today}"
                                MaximumDate="{x:Static System:DateTime.Today}"
                                TextColor="#2C3E50"
                                FontSize="14"
                                WidthRequest="200" />
                </VerticalStackLayout>
            </Frame>

            <!-- GRÃFICO SEMANAL CASERO -->
            <Frame CornerRadius="20"
                   Padding="10"
                   BackgroundColor="White"
                   HasShadow="True"
                   BorderColor="#E0E0E0"
                   Margin="0,10,0,0"
                   WidthRequest="300"
                   HeightRequest="250">
                <HorizontalStackLayout Spacing="10">
                    <!-- Leyenda -->
                    <VerticalStackLayout WidthRequest="60"
                             VerticalOptions="Center"
                             Spacing="20">
                        <!-- LÃ­nea para el nivel alto -->
                        <StackLayout Orientation="Horizontal" Spacing="5" VerticalOptions="Center">
                            <BoxView HeightRequest="1" WidthRequest="20" BackgroundColor="Green" VerticalOptions="Center"/>
                            <Label Text="Alto"
                       FontSize="12"
                       TextColor="#2C3E50"
                       VerticalTextAlignment="Start" />
                        </StackLayout>

                        <!-- LÃ­nea para el nivel medio -->
                        <StackLayout Orientation="Horizontal" Spacing="5" VerticalOptions="Center">
                            <BoxView HeightRequest="1" WidthRequest="20" BackgroundColor="#FFB300" VerticalOptions="Center"/>
                            <Label Text="Medio"
                       FontSize="12"
                       TextColor="#2C3E50"
                       VerticalTextAlignment="Center" />
                        </StackLayout>

                        <!-- LÃ­nea para el nivel bajo -->
                        <StackLayout Orientation="Horizontal" Spacing="5" VerticalOptions="Center">
                            <BoxView HeightRequest="1" WidthRequest="20" BackgroundColor="Red" VerticalOptions="Center"/>
                            <Label Text="Bajo"
                       FontSize="12"
                       TextColor="#2C3E50"
                       VerticalTextAlignment="End" />
                        </StackLayout>
                    </VerticalStackLayout>
                    <VerticalStackLayout Spacing="10">
                        <Label Text="GrÃ¡fico semanal"
                   FontSize="16"
                   FontAttributes="Bold"
                   TextColor="#2C3E50"
                   HorizontalTextAlignment="Center" />

                        <Grid x:Name="graficoSemanalCasero"
              ColumnSpacing="5"
              VerticalOptions="End"
              HorizontalOptions="Center"
              HeightRequest="160">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                        </Grid>
                    </VerticalStackLayout>
                </HorizontalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>

    <!-- BOTTOM SHEET -->
    <uranium:UraniumContentPage.Attachments>
        <material:BottomSheetView x:Name="aguaBottomSheet"
                                  CloseOnTapOutside="true"
                                  DisablePageWhenOpened="false">
            <material:BottomSheetView.Header>
                <Label Text="Historial + InformaciÃ³n"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="#2E86DE"
                       HorizontalOptions="Center"
                       Padding="10"/>
            </material:BottomSheetView.Header>

            <ScrollView>
                <VerticalStackLayout Padding="20" Spacing="15">

                    <!-- Leyenda -->
                    <Label Text="Equivalencia de consumo"
                           FontAttributes="Bold"
                           FontSize="20"
                           HorizontalOptions="Center"
                           TextColor="#2C3E50" />

                    <Grid ColumnDefinitions="20,*" Margin="0,5">
                        <BoxView Color="#00BFFF" WidthRequest="14" HeightRequest="14" CornerRadius="7" VerticalOptions="Center" />
                        <Label Text="250 ml â‰ˆ 1 vaso" TextColor="#34495E" FontSize="15" Grid.Column="1" />
                    </Grid>
                    <Grid ColumnDefinitions="20,*" Margin="0,5">
                        <BoxView Color="#007AFF" WidthRequest="14" HeightRequest="14" CornerRadius="7" VerticalOptions="Center" />
                        <Label Text="500 ml â‰ˆ 2 vasos" TextColor="#34495E" FontSize="15" Grid.Column="1" />
                    </Grid>

                    <BoxView HeightRequest="1" Color="#E0E0E0" Margin="0,15"/>

                    <!-- Historial -->
                    <Label x:Name="historialTitleLabel"
                           Text="Historial de Consumo"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#2C3E50"
                           IsVisible="False"
                           HorizontalOptions="Center" />

                    <CollectionView x:Name="historialAguaCollection"
                                    ItemsSource="{Binding RegistrosAgua}"
                                    HeightRequest="250"
                                    EmptyView="AÃºn no hay registros.">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame Padding="10"
                                       CornerRadius="16"
                                       BackgroundColor="White"
                                       BorderColor="#E0E0E0"
                                       HasShadow="True"
                                       Margin="0,4,0,4">
                                    <Grid ColumnDefinitions="*,Auto">
                                        <VerticalStackLayout Spacing="2" Grid.Column="0">
                                            <Label Text="{Binding Fecha, StringFormat='Fecha: {0:dd/MM/yyyy}'}"
                                                   TextColor="#2C3E50"
                                                   FontSize="14"
                                                   FontAttributes="Bold" />
                                            <Label Text="{Binding Cantidad, StringFormat='Cantidad: {0} ml'}"
                                                   TextColor="#007AFF"
                                                   FontSize="13" />
                                        </VerticalStackLayout>

                                        <ImageButton Source="delete.png"
                                                     Grid.Column="1"
                                                     BackgroundColor="Transparent"
                                                     HeightRequest="18"
                                                     WidthRequest="18"
                                                     Padding="0"
                                                     CommandParameter="{Binding}"
                                                     Clicked="EliminarRegistroAgua_Clicked"/>
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                </VerticalStackLayout>
            </ScrollView>
        </material:BottomSheetView>
    </uranium:UraniumContentPage.Attachments>
</uranium:UraniumContentPage>
