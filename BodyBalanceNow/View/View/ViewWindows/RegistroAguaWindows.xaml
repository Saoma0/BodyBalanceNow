<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
             x:Class="BodyBalanceNow.View.ViewWindows.RegistroAguaWindows"
             xmlns:System="clr-namespace:System;assembly=mscorlib"

             BackgroundColor="#F0F4F8"
             Title="Consumo de Agua">

    <Grid>
        <!-- Contenedor con centrado total -->
        <ScrollView VerticalOptions="CenterAndExpand"
                    HorizontalOptions="CenterAndExpand">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Bloque centrado en columna central -->
                <Grid Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Columna izquierda -->
                    <VerticalStackLayout Grid.Column="0"
                     Spacing="15"
                     Padding="10"
                     HorizontalOptions="Center"
                     VerticalOptions="Center"
                     WidthRequest="320">

                        <Label x:Name="mensajeNoSesion"
                               IsVisible="False"
                               Text="Inicia sesiÃ³n para registrar tu consumo de agua."
                               TextColor="#E74C3C"
                               FontSize="14"
                               HorizontalTextAlignment="Center"
                               FontAttributes="Bold" />

                        <Frame BackgroundColor="White"
                               CornerRadius="25"
                               Padding="20"
                               HasShadow="True"
                               BorderColor="#E0E0E0">
                            <VerticalStackLayout Spacing="6">
                                <Label x:Name="progresoLabel"
                                       Text="Hoy: 0 / 2000 ml"
                                       FontSize="18"
                                       TextColor="#2C3E50"
                                       HorizontalTextAlignment="Center"
                                       FontAttributes="Bold" />

                                <ProgressBar x:Name="progresoAguaBar"
                                             Progress="0"
                                             HeightRequest="10"
                                             BackgroundColor="#D6D6D6"
                                             ProgressColor="#00BFFF"
                                             Margin="0,4"/>

                                <Label x:Name="objetivoCumplidoLabel"
                                       Text="ðŸŽ‰ Â¡Objetivo diario cumplido!"
                                       FontSize="14"
                                       TextColor="MediumSeaGreen"
                                       FontAttributes="Bold"
                                       IsVisible="False"
                                       HorizontalTextAlignment="Center"
                                       Margin="0,5,0,0" />
                            </VerticalStackLayout>
                        </Frame>

                        <HorizontalStackLayout x:Name="botonesRegistro"
                           IsVisible="False"
                           Spacing="12"
                           HorizontalOptions="Center">
                            <Button Text="+250 ml"
                                    StyleClass="ElevatedButton"
                                    CommandParameter="250"
                                    Clicked="RegistrarConsumo"
                                    BackgroundColor="#2196F3"
                                    TextColor="White"
                                    CornerRadius="20"
                                    WidthRequest="110"
                                    FontAttributes="Bold"/>

                            <Button Text="+500 ml"
                                    StyleClass="ElevatedButton"
                                    CommandParameter="500"
                                    Clicked="RegistrarConsumo"
                                    BackgroundColor="#1976D2"
                                    TextColor="White"
                                    CornerRadius="20"
                                    WidthRequest="110"
                                    FontAttributes="Bold"/>
                        </HorizontalStackLayout>
                        <Frame BackgroundColor="White"
                              CornerRadius="20"
                              Padding="15"
                              HasShadow="True"
                              BorderColor="#E0E0E0"
                              WidthRequest="300">
                            <HorizontalStackLayout Spacing="20"
                                                  HorizontalOptions="Center"
                                                  VerticalOptions="Center">
                                <Label Text="ðŸ’§ 250 ml â‰ˆ 1 vaso"
                                      FontSize="13"
                                      TextColor="#2C3E50"
                                      HorizontalTextAlignment="Center" />
                                <Label Text="ðŸ’§ 500 ml â‰ˆ 2 vasos"
                                      FontSize="13"
                                      TextColor="#2C3E50"
                                      HorizontalTextAlignment="Center" />
                            </HorizontalStackLayout>
                        </Frame>

                        <Frame BackgroundColor="White"
                               CornerRadius="20"
                               Padding="15"
                               HasShadow="True"
                               BorderColor="#E0E0E0"
                               WidthRequest="300">
                            <VerticalStackLayout Spacing="6" HorizontalOptions="Center">
                                <Label Text="ðŸ“… Fecha del consumo"
                                       FontSize="14"
                                       TextColor="#2C3E50"
                                       FontAttributes="Bold"
                                       HorizontalTextAlignment="Center" />


                                <DatePicker x:Name="fechaPicker"
                                            Format="dd/MM/yyyy"
                                            Date="{x:Static System:DateTime.Today}"
                                            MaximumDate="{x:Static System:DateTime.Today}"
                                            TextColor="#2C3E50"
                                            FontSize="14"
                                            WidthRequest="200" />
                            </VerticalStackLayout>
                        </Frame>



                        <!-- GRÃFICO SEMANAL CASERO -->
                        <Frame CornerRadius="20"
                               Padding="10"
                               BackgroundColor="White"
                               HasShadow="True"
                               BorderColor="#E0E0E0"
                               Margin="0,10,0,0"
                               WidthRequest="300"
                               HeightRequest="250">
                            <HorizontalStackLayout Spacing="10">
                                <!-- Leyenda -->
                                <VerticalStackLayout WidthRequest="60"
                                                     VerticalOptions="Center"
                                                     Spacing="20">
                                    <!-- LÃ­nea para el nivel alto -->
                                    <StackLayout Orientation="Horizontal" Spacing="5" VerticalOptions="Center">
                                        <BoxView HeightRequest="1" WidthRequest="20" BackgroundColor="Green" VerticalOptions="Center"/>
                                        <Label Text="Alto"
                                               FontSize="12"
                                               TextColor="#2C3E50"
                                               VerticalTextAlignment="Start" />
                                    </StackLayout>

                                    <!-- LÃ­nea para el nivel medio -->
                                    <StackLayout Orientation="Horizontal" Spacing="5" VerticalOptions="Center">
                                        <BoxView HeightRequest="1" WidthRequest="20" BackgroundColor="#FFB300" VerticalOptions="Center"/>
                                        <Label Text="Medio"
                                               FontSize="12"
                                               TextColor="#2C3E50"
                                               VerticalTextAlignment="Center" />
                                    </StackLayout>

                                    <!-- LÃ­nea para el nivel bajo -->
                                    <StackLayout Orientation="Horizontal" Spacing="5" VerticalOptions="Center">
                                        <BoxView HeightRequest="1" WidthRequest="20" BackgroundColor="Red" VerticalOptions="Center"/>
                                        <Label Text="Bajo"
                                               FontSize="12"
                                               TextColor="#2C3E50"
                                               VerticalTextAlignment="End" />
                                    </StackLayout>
                                </VerticalStackLayout>
                                <VerticalStackLayout Spacing="10">
                                    <Label Text="GrÃ¡fico semanal"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           TextColor="#2C3E50"
                                           HorizontalTextAlignment="Center" />

                                    <Grid x:Name="graficoSemanalCasero"
                                      ColumnSpacing="5"
                                      VerticalOptions="End"
                                      HorizontalOptions="Center"
                                      HeightRequest="160">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    </Grid>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                        </Frame>

                    </VerticalStackLayout>


                    <!-- Columna derecha (historial) -->
                    <VerticalStackLayout Grid.Column="1"
                                         Spacing="10"
                                         Padding="10"
                                         HorizontalOptions="Center"
                                         VerticalOptions="Center"
                                         WidthRequest="300">

                        <Label x:Name="historialTitleLabel"
                               Text="Historial de Consumo"
                               IsVisible="False"
                               TextColor="#2C3E50"
                               FontSize="16"
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center" />

                        <CollectionView x:Name="historialAguaCollection"
                                        ItemsSource="{Binding RegistrosAgua}"
                                        HeightRequest="460"
                                        EmptyView="AÃºn no hay registros.">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Frame Padding="10"
                                           CornerRadius="16"
                                           BackgroundColor="White"
                                           BorderColor="#E0E0E0"
                                           HasShadow="True"
                                           Margin="0,4,0,4">
                                        <Grid ColumnDefinitions="*,Auto">
                                            <!-- Info -->
                                            <VerticalStackLayout Spacing="2" Grid.Column="0">
                                                <Label Text="{Binding Fecha, StringFormat='Fecha: {0:dd/MM/yyyy}'}"
                                                       TextColor="#2C3E50"
                                                       FontSize="14"
                                                       FontAttributes="Bold" />
                                                <Label Text="{Binding Cantidad, StringFormat='Cantidad: {0} ml'}"
                                                       TextColor="#007AFF"
                                                       FontSize="13" />
                                            </VerticalStackLayout>

                                            <!-- BotÃ³n eliminar -->
                                            <ImageButton
                                                    Source="delete.png"
                                                    Grid.Column="1"
                                                    BackgroundColor="Transparent"
                                                    HeightRequest="15"
                                                    WidthRequest="15"
                                                    Padding="0"
                                                    CommandParameter="{Binding}"
                                                    Clicked="EliminarRegistroAgua_Clicked"
                                              />
                                        </Grid>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                    </VerticalStackLayout>
                </Grid>
            </Grid>
        </ScrollView>
    </Grid>
</ContentPage>
