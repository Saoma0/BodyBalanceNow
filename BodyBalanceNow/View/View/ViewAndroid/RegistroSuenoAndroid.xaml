<?xml version="1.0" encoding="utf-8" ?>
<uranium:UraniumContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
    xmlns:uranium="http://schemas.enisn-projects.io/dotnet/maui/uraniumui"
    xmlns:System="clr-namespace:System;assembly=mscorlib"
    x:Class="BodyBalanceNow.View.ViewAndroid.RegistroSuenoAndroid">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Mensaje sin sesiÃ³n -->
            <Label x:Name="mensajeNoSesion"
                   IsVisible="False"
                   Text="Inicia sesiÃ³n para registrar tu sueÃ±o."
                   TextColor="#E74C3C"
                   FontSize="14"
                   HorizontalTextAlignment="Center"
                   FontAttributes="Bold" />

            <!-- Panel resumen -->
            <Frame BackgroundColor="White"
                   CornerRadius="25"
                   Padding="20"
                   HasShadow="True"
                   BorderColor="#E0E0E0">
                <VerticalStackLayout Spacing="10">
                    <Label x:Name="resumenSuenoLabel"
                           Text="Hoy: 0 h dormidas"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#2C3E50"
                           HorizontalTextAlignment="Center" />

                    <Label x:Name="recomendacionSuenoLabel"
                           Text="*Se recomienda un sueÃ±o de 8 horas"
                           FontSize="13"
                           TextColor="#7F8C8D"
                           HorizontalTextAlignment="Center"
                           FontAttributes="Italic" />
                </VerticalStackLayout>
            </Frame>

            <!-- Entradas de hora -->
            <Frame BackgroundColor="White"
                   CornerRadius="20"
                   Padding="15"
                   HasShadow="True"
                   BorderColor="#E0E0E0"
                   WidthRequest="300">
                <VerticalStackLayout Spacing="10">
                    <Label Text="ðŸ› Hora de dormir" FontSize="14" FontAttributes="Bold" TextColor="#2C3E50" />
                    <TimePicker x:Name="horaDormirPicker" />

                    <Label Text="â˜€ Hora de despertar" FontSize="14" FontAttributes="Bold" TextColor="#2C3E50" />
                    <TimePicker x:Name="horaDespertarPicker" />
                </VerticalStackLayout>
            </Frame>

            <!-- Fecha -->
            <Frame BackgroundColor="White"
                   CornerRadius="20"
                   Padding="15"
                   HasShadow="True"
                   BorderColor="#E0E0E0"
                   WidthRequest="300">
                <VerticalStackLayout>
                    <Label Text="ðŸ“… Fecha del registro"
                           FontSize="14"
                           TextColor="#2C3E50"
                           FontAttributes="Bold"
                           HorizontalTextAlignment="Center" />
                    <DatePicker x:Name="fechaSuenoPicker"
                                Format="dd/MM/yyyy"
                                Date="{x:Static System:DateTime.Today}"
                                MaximumDate="{x:Static System:DateTime.Today}"
                                TextColor="#2C3E50"
                                FontSize="14"
                                WidthRequest="200" />
                </VerticalStackLayout>
            </Frame>

            <!-- BotÃ³n de guardar -->
            <Button Text="Registrar SueÃ±o"
                    BackgroundColor="#34C759"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="15"
                    Clicked="RegistrarSueno_Clicked"
                    WidthRequest="240" />


            <!-- GrÃ¡fico semanal -->
            <Frame CornerRadius="20"
         Padding="10"
         BackgroundColor="White"
         HasShadow="True"
         BorderColor="#E0E0E0"
         Margin="0,10,0,0"
         WidthRequest="300"
         HeightRequest="250">
                <HorizontalStackLayout Spacing="10">
                    <!-- Leyenda -->
                    <VerticalStackLayout WidthRequest="60"
                               VerticalOptions="Center"
                               Spacing="20">
                        <!-- LÃ­nea para el nivel alto -->
                        <StackLayout Orientation="Horizontal" Spacing="5" VerticalOptions="Center">
                            <BoxView HeightRequest="1" WidthRequest="20" BackgroundColor="Green" VerticalOptions="Center"/>
                            <Label Text="Alto"
                         FontSize="12"
                         TextColor="#2C3E50"
                         VerticalTextAlignment="Start" />
                        </StackLayout>

                        <!-- LÃ­nea para el nivel medio -->
                        <StackLayout Orientation="Horizontal" Spacing="5" VerticalOptions="Center">
                            <BoxView HeightRequest="1" WidthRequest="20" BackgroundColor="#FFB300" VerticalOptions="Center"/>
                            <Label Text="Medio"
                         FontSize="12"
                         TextColor="#2C3E50"
                         VerticalTextAlignment="Center" />
                        </StackLayout>

                        <!-- LÃ­nea para el nivel bajo -->
                        <StackLayout Orientation="Horizontal" Spacing="5" VerticalOptions="Center">
                            <BoxView HeightRequest="1" WidthRequest="20" BackgroundColor="Red" VerticalOptions="Center"/>
                            <Label Text="Bajo"
                         FontSize="12"
                         TextColor="#2C3E50"
                         VerticalTextAlignment="End" />
                        </StackLayout>
                    </VerticalStackLayout>
                    <VerticalStackLayout Spacing="10">
                        <Label Text="GrÃ¡fico semanal"
                     FontSize="16"
                     FontAttributes="Bold"
                     TextColor="#2C3E50"
                     HorizontalTextAlignment="Center" />
                        <Grid x:Name="graficoSemanalSueno"
                ColumnSpacing="5"
                VerticalOptions="End"
                HorizontalOptions="Center"
                HeightRequest="160">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                        </Grid>
                    </VerticalStackLayout>
                </HorizontalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>

    <!-- BottomSheet con historial -->
    <uranium:UraniumContentPage.Attachments>
        <material:BottomSheetView x:Name="historialBottomSheet"
                                  CloseOnTapOutside="true"
                                  DisablePageWhenOpened="false">
            <material:BottomSheetView.Header>
                <Label Text="Historial de SueÃ±o"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="#2E86DE"
                       HorizontalOptions="Center"
                       Padding="10" />
            </material:BottomSheetView.Header>

            <ScrollView>
                <VerticalStackLayout Padding="20" Spacing="15">
                    <CollectionView x:Name="historialSuenoCollection"
                                    ItemsSource="{Binding RegistrosSueno}"
                                    HeightRequest="400"
                                    EmptyView="AÃºn no hay registros.">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame Padding="10"
                                       CornerRadius="16"
                                       BackgroundColor="White"
                                       BorderColor="#E0E0E0"
                                       HasShadow="True"
                                       Margin="0,4,0,4">
                                    <Grid ColumnDefinitions="*,Auto">
                                        <VerticalStackLayout Spacing="2" Grid.Column="0">
                                            <Label Text="{Binding Fecha, StringFormat='Fecha: {0:dd/MM/yyyy}'}"
                                                   TextColor="#2C3E50"
                                                   FontSize="14"
                                                   FontAttributes="Bold" />
                                            <Label Text="{Binding HorasDormidas, StringFormat='Horas: {0:F1} h'}"
                                                   TextColor="#007AFF"
                                                   FontSize="13" />
                                        </VerticalStackLayout>

                                        <ImageButton Source="delete.png"
                                                     Grid.Column="1"
                                                     BackgroundColor="Transparent"
                                                     HeightRequest="18"
                                                     WidthRequest="18"
                                                     Padding="0"
                                                     CommandParameter="{Binding}"
                                                     Clicked="EliminarRegistroSueno_Clicked" />
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </ScrollView>
        </material:BottomSheetView>
    </uranium:UraniumContentPage.Attachments>
</uranium:UraniumContentPage>
